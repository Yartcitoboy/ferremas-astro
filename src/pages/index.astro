---
// Importar los componentes necesarios
import MainLayout from "@/layouts/MainLayout.astro";
import HeroSection from "@components/sections/landing/HeroSection.astro";
import HeroSectionAlt from "@components/sections/landing/HeroSectionAlt.astro";
import ClientsSection from "@components/sections/landing/ClientsSection.astro";
import FeaturesGeneral from "@components/sections/features/FeaturesGeneral.astro";
import FeaturesNavs from "@components/sections/features/FeaturesNavs.astro";
import TestimonialsSection from "@components/sections/testimonials/TestimonialsSection.astro";
import PricingSection from "@components/sections/pricing/PricingSection.astro";
import FAQ from "@components/sections/misc/FAQ.astro";
import AnnouncementBanner from "@components/ui/banners/AnnouncementBanner.astro";
import heroImage from "@images/hero-image.avif";
import faqs from "@data/faqs.json";
import features from "@data/features.json";
import pricing from "@data/pricing.json";
import featureImage from "@images/features-image.avif";
import construction from "@images/construction-image.avif";
import tools from "@images/automated-tools.avif";
import dashboard from "@images/dashboard-image.avif";
import { partnersData } from "@/data_files/constants";

const avatarSrcs: Array<string> = [
  "https://images.unsplash.com/photo-1568602471122-7832951cc4c5?ixlib=rb-4.0.3&ixid=MnwxMjA3fDB8MHxwaG90by1wYWdlfHx8fGVufDB8fHx8&auto=format&fit=facearea&facepad=2&w=300&h=300&q=80",
  "https://images.unsplash.com/photo-1531927557220-a9e23c1e4794?ixlib=rb-4.0.3&ixid=MnwxMjA3fDB8MHxwaG90by1wYWdlfHx8fGVufDB8fHx8&auto=format&fit=facearea&facepad=2&w=300&h=300&q=80",
  "https://images.unsplash.com/photo-1541101767792-f9b2b1c4f127?ixlib=rb-4.0.3&ixid=MnwxMjA3fDB8MHxwaG90by1wYWdlfHx8fGVufDB8fHx8&&auto=format&fit=facearea&facepad=3&w=300&h=300&q=80",
  "https://images.unsplash.com/photo-1492562080023-ab3db95bfbce?ixlib=rb-4.0.3&ixid=MnwxMjA3fDB8MHxwaG90by1wYWdlfHx8fGVufDB8fHx8&auto=format&fit=facearea&facepad=2&w=300&h=300&q=80",
];
---

<MainLayout>
  <AnnouncementBanner
    btnId="dismiss-button"
    btnTitle="Explora FERREMAS en GitHub"
    url="https://github.com/mearashadowfax/ScrewFast"
  />

  <HeroSection
    title=`Equipa tus Proyectos con <span
        class="text-yellow-500 dark:text-yellow-400">FERREMAS</span>`
    subTitle="Herramientas de calidad y servicios especializados para satisfacer las necesidades de construcción y ferretería en Chile."
    primaryBtn="Ver productos"
    primaryBtnURL="/products"
    secondaryBtn="Contáctanos"
    secondaryBtnURL="/contact"
    withReview={true}
    avatars={avatarSrcs}
    rating=`<span class="font-bold">4.8</span> / 5`
    starCount={4}
    reviews=`De Más <span class="font-bold">12.8k</span> Reseñas`
    src={heroImage}
    alt="Cajas de productos FERREMAS con herramientas variadas"
  />

  <ClientsSection
    title="Confiado por Profesionales de la Industria"
    subTitle="FERREMAS es la elección preferida por empresas constructoras y ferreterías en todo Chile."
    partners={partnersData}
  />

  <FeaturesGeneral
    title="Cumpliendo con las Demandas del Sector"
    subTitle="En FERREMAS, entendemos los desafíos únicos de la industria de la construcción y ferretería. Ofrecemos herramientas y servicios diseñados para ayudarte a alcanzar tus objetivos."
    src={featureImage}
    alt="Productos FERREMAS en cajas flotantes"
    features={features}
  />

  <FeaturesNavs
    title=`Personaliza las soluciones de <span class="text-yellow-500 dark:text-yellow-400">FERREMAS</span> para tus proyectos.`
    tabs={[
      {
        heading: "Herramientas de Vanguardia",
        content:
          "Descubre herramientas de alta calidad que mejoran la eficiencia en tus proyectos de construcción y ferretería.",
        svg: "tools",
        src: tools,
        alt: "Equipo pesado amarillo y negro en un campo de hierba marrón",
        first: true,
      },
      {
        heading: "Gestión Intuitiva",
        content:
          "Administra tus proyectos con facilidad utilizando nuestras soluciones digitales diseñadas para optimizar tu flujo de trabajo.",
        svg: "dashboard",
        src: dashboard,
        alt: "Captura de pantalla de un panel de gestión intuitivo",
        second: true,
      },
      {
        heading: "Características Robustas",
        content:
          "Simplifica tus operaciones con herramientas y servicios diseñados para maximizar la productividad.",
        svg: "house",
        src: construction,
        alt: "Estructura metálica gris cerca de una grúa torre durante el día",
      },
    ]}
  />

  <TestimonialsSection
    title="Impulsa tus Proyectos"
    subTitle="Con FERREMAS, comienza rápido con una configuración sencilla y soporte confiable."
    testimonials={[
      {
        content:
          "FERREMAS transformó nuestra forma de trabajar. Su plataforma y herramientas son esenciales para nuestro éxito.",
        author: "Samantha Ruiz",
        role: "Directora de Operaciones | ConstructIt Inc.",
        avatarSrc:
          "https://images.unsplash.com/photo-1593104547489-5cfb3839a3b5?q=80&w=1453&auto=format&fit=crop&ixlib=rb-4.0.3&ixid=M3wxMjA3fDB8MHxwaG90by1wYWdlfHx8fGVufDB8fHx8fA%3D%3D8&auto=format&fit=facearea&facepad=2&w=320&h=320&q=80",
      },
    ]}
    statistics={[
      {
        count: "70k+",
        description:
          "clientes satisfechos en todo Chile",
      },
      {
        count: "35%",
        description:
          "incremento en la eficiencia de proyectos con nuestras herramientas",
      },
      {
        count: "15.3%",
        description:
          "reducción en costos de mantenimiento reportada por clientes",
      },
      {
        count: "2x",
        description: "ensamblaje más rápido con nuestras soluciones innovadoras",
      },
    ]}
  />

  <PricingSection pricing={pricing} />

  <FAQ title="Preguntas<br />frecuentes" faqs={faqs} />

  <HeroSectionAlt
    title="Construyamos Juntos"
    subTitle="FERREMAS es tu socio confiable en herramientas y servicios para la construcción y ferretería."
    url="https://github.com/mearashadowfax/ScrewFast"
  />
</MainLayout>