---
// Props comunes para los inputs
interface InputProps {
  id: string;
  label: string;
  errorId: string;
}

interface Props {
  nombreApellidoProps: InputProps;
  rutProps: InputProps;
  direccionProps: InputProps;
  telefonoProps: InputProps;
  emailProps: InputProps;
  fechaNacimientoProps: InputProps;
  generoProps: Omit<InputProps, 'label'> & { label?: string; };
}

const {
  nombreApellidoProps,
  rutProps,
  direccionProps,
  telefonoProps,
  emailProps,
  fechaNacimientoProps,
  generoProps,
} = Astro.props;

const generoLabel = generoProps.label ?? (Astro.currentLocale === "fr" ? "Genre" : "Género");
---

<div>
  {/* Input para Nombre y Apellido */}
  <div>
    <label
      for={nombreApellidoProps.id}
      class="mb-2 block text-sm text-neutral-800 dark:text-neutral-200"
    >{nombreApellidoProps.label}</label>
    <div class="relative">
      <input
        type="text"
        id={nombreApellidoProps.id}
        name="nombre_apellido"
        class="block w-full rounded-lg border border-neutral-200 bg-neutral-50 px-4 py-3 text-sm text-neutral-700 focus:border-neutral-200 focus:outline-hidden focus:ring-3 focus:ring-neutral-400 disabled:pointer-events-none disabled:opacity-50 dark:border-neutral-600 dark:bg-neutral-700/30 dark:text-neutral-300 dark:focus:ring-1"
        required
        aria-describedby={nombreApellidoProps.id}
      />
      <div class="pointer-events-none absolute inset-y-0 end-0 hidden pe-3">
        <svg
          class="h-5 w-5 text-red-500"
          width="16"
          height="16"
          fill="currentColor"
          viewBox="0 0 16 16"
          aria-hidden="true"
        >
          <path
            d="M16 8A8 8 0 1 1 0 8a8 8 0 0 1 16 0zM8 4a.905.905 0 0 0-.9.995l.35 3.507a.552.552 0 0 0 1.1 0l.35-3.507A.905.905 0 0 0 8 4zm.002 6a1 1 0 1 0 0 2 1 1 0 0 0 0-2z"
          ></path>
        </svg>
      </div>
    </div>
    <p class="mt-2 hidden text-xs text-red-600" id={nombreApellidoProps.errorId}>
      Por favor, ingresa tu nombre y apellido.
    </p>
  </div>

  {/* Input para RUT */}
  <div class="mt-4">
    <label
      for={rutProps.id}
      class="mb-2 block text-sm text-neutral-800 dark:text-neutral-200"
    >{rutProps.label}</label>
    <div class="relative">
      <input
        type="text"
        id={rutProps.id}
        name="rut"
        class="block w-full rounded-lg border border-neutral-200 bg-neutral-50 px-4 py-3 text-sm text-neutral-700 focus:border-neutral-200 focus:outline-hidden focus:ring-3 focus:ring-neutral-400 disabled:pointer-events-none disabled:opacity-50 dark:border-neutral-600 dark:bg-neutral-700/30 dark:text-neutral-300 dark:focus:ring-1"
        required
        aria-describedby={rutProps.id}
      />
      <div class="pointer-events-none absolute inset-y-0 end-0 hidden pe-3">
        <svg
          class="h-5 w-5 text-red-500"
          width="16"
          height="16"
          fill="currentColor"
          viewBox="0 0 16 16"
          aria-hidden="true"
        >
          <path
            d="M16 8A8 8 0 1 1 0 8a8 8 0 0 1 16 0zM8 4a.905.905 0 0 0-.9.995l.35 3.507a.552.552 0 0 0 1.1 0l.35-3.507A.905.905 0 0 0 8 4zm.002 6a1 1 0 1 0 0 2 1 1 0 0 0 0-2z"
          ></path>
        </svg>
      </div>
    </div>
    <p class="mt-2 hidden text-xs text-red-600" id={rutProps.errorId}>
      Por favor, ingresa tu RUT.
    </p>
  </div>

  {/* Input para Dirección */}
  <div class="mt-4">
    <label
      for={direccionProps.id}
      class="mb-2 block text-sm text-neutral-800 dark:text-neutral-200"
    >{direccionProps.label}</label>
    <div class="relative">
      <input
        type="text"
        id={direccionProps.id}
        name="direccion"
        class="block w-full rounded-lg border border-neutral-200 bg-neutral-50 px-4 py-3 text-sm text-neutral-700 focus:border-neutral-200 focus:outline-hidden focus:ring-3 focus:ring-neutral-400 disabled:pointer-events-none disabled:opacity-50 dark:border-neutral-600 dark:bg-neutral-700/30 dark:text-neutral-300 dark:focus:ring-1"
        required
        aria-describedby={direccionProps.id}
      />
      <div class="pointer-events-none absolute inset-y-0 end-0 hidden pe-3">
        <svg
          class="h-5 w-5 text-red-500"
          width="16"
          height="16"
          fill="currentColor"
          viewBox="0 0 16 16"
          aria-hidden="true"
        >
          <path
            d="M16 8A8 8 0 1 1 0 8a8 8 0 0 1 16 0zM8 4a.905.905 0 0 0-.9.995l.35 3.507a.552.552 0 0 0 1.1 0l.35-3.507A.905.905 0 0 0 8 4zm.002 6a1 1 0 1 0 0 2 1 1 0 0 0 0-2z"
          ></path>
        </svg>
      </div>
    </div>
    <p class="mt-2 hidden text-xs text-red-600" id={direccionProps.errorId}>
      Por favor, ingresa tu dirección.
    </p>
  </div>

  {/* Input para Teléfono */}
  <div class="mt-4">
    <label
      for={telefonoProps.id}
      class="mb-2 block text-sm text-neutral-800 dark:text-neutral-200"
    >{telefonoProps.label}</label>
    <div class="relative">
      <input
        type="tel"
        id={telefonoProps.id}
        name="telefono"
        class="block w-full rounded-lg border border-neutral-200 bg-neutral-50 px-4 py-3 text-sm text-neutral-700 focus:border-neutral-200 focus:outline-hidden focus:ring-3 focus:ring-neutral-400 disabled:pointer-events-none disabled:opacity-50 dark:border-neutral-600 dark:bg-neutral-700/30 dark:text-neutral-300 dark:focus:ring-1"
        required
        aria-describedby={telefonoProps.id}
      />
      <div class="pointer-events-none absolute inset-y-0 end-0 hidden pe-3">
        <svg
          class="h-5 w-5 text-red-500"
          width="16"
          height="16"
          fill="currentColor"
          viewBox="0 0 16 16"
          aria-hidden="true"
        >
          <path
            d="M16 8A8 8 0 1 1 0 8a8 8 0 0 1 16 0zM8 4a.905.905 0 0 0-.9.995l.35 3.507a.552.552 0 0 0 1.1 0l.35-3.507A.905.905 0 0 0 8 4zm.002 6a1 1 0 1 0 0 2 1 1 0 0 0 0-2z"
          ></path>
        </svg>
      </div>
    </div>
    <p class="mt-2 hidden text-xs text-red-600" id={telefonoProps.errorId}>
      Por favor, ingresa tu número de teléfono.
    </p>
  </div>

  {/* Input para Email */}
  <div class="mt-4">
    <label
      for={emailProps.id}
      class="mb-2 block text-sm text-neutral-800 dark:text-neutral-200"
    >{emailProps.label}</label>
    <div class="relative">
      <input
        type="email"
        id={emailProps.id}
        name="email"
        autocomplete="email"
        class="block w-full rounded-lg border border-neutral-200 bg-neutral-50 px-4 py-3 text-sm text-neutral-700 focus:border-neutral-200 focus:outline-hidden focus:ring-3 focus:ring-neutral-400 disabled:pointer-events-none disabled:opacity-50 dark:border-neutral-600 dark:bg-neutral-700/30 dark:text-neutral-300 dark:focus:ring-1"
        required
        aria-describedby={emailProps.id}
      />
      <div class="pointer-events-none absolute inset-y-0 end-0 hidden pe-3">
        <svg
          class="h-5 w-5 text-red-500"
          width="16"
          height="16"
          fill="currentColor"
          viewBox="0 0 16 16"
          aria-hidden="true"
        >
          <path
            d="M16 8A8 8 0 1 1 0 8a8 8 0 0 1 16 0zM8 4a.905.905 0 0 0-.9.995l.35 3.507a.552.552 0 0 0 1.1 0l.35-3.507A.905.905 0 0 0 8 4zm.002 6a1 1 0 1 0 0 2 1 1 0 0 0 0-2z"
          ></path>
        </svg>
      </div>
    </div>
    <p class="mt-2 hidden text-xs text-red-600" id={emailProps.errorId}>
      Por favor, incluye una dirección de correo electrónico válida.
    </p>
  </div>

  {/* Input para Fecha de Nacimiento */}
  <div class="mt-4">
    <label
      for={fechaNacimientoProps.id}
      class="mb-2 block text-sm text-neutral-800 dark:text-neutral-200"
    >{fechaNacimientoProps.label}</label>
    <div class="relative">
      <input
        type="date"
        id={fechaNacimientoProps.id}
        name="fecha_nacimiento"
        class="block w-full rounded-lg border border-neutral-200 bg-neutral-50 px-4 py-3 text-sm text-neutral-700 focus:border-neutral-200 focus:outline-hidden focus:ring-3 focus:ring-neutral-400 disabled:pointer-events-none disabled:opacity-50 dark:border-neutral-600 dark:bg-neutral-700/30 dark:text-neutral-300 dark:focus:ring-1"
        required
        aria-describedby={fechaNacimientoProps.id}
      />
      <div class="pointer-events-none absolute inset-y-0 end-0 hidden pe-3">
        <svg
          class="h-5 w-5 text-red-500"
          width="16"
          height="16"
          fill="currentColor"
          viewBox="0 0 16 16"
          aria-hidden="true"
        >
          <path
            d="M16 8A8 8 0 1 1 0 8a8 8 0 0 1 16 0zM8 4a.905.905 0 0 0-.9.995l.35 3.507a.552.552 0 0 0 1.1 0l.35-3.507A.905.905 0 0 0 8 4zm.002 6a1 1 0 1 0 0 2 1 1 0 0 0 0-2z"
          ></path>
        </svg>
      </div>
    </div>
    <p class="mt-2 hidden text-xs text-red-600" id={fechaNacimientoProps.errorId}>
      Por favor, ingresa tu fecha de nacimiento.
    </p>
  </div>

  {/* Input para Género (Radio Buttons) */}
  <div class="mt-4">
    <label class="mb-2 block text-sm text-neutral-800 dark:text-neutral-200">
      {generoLabel}
    </label>
    <div class="flex items-center space-x-4">
      <div>
        <input
          type="radio"
          id={`${generoProps.id}-masculino`}
          name="genero"
          value="masculino"
          class="h-4 w-4 border-neutral-300 text-neutral-600 focus:ring-2 focus:ring-neutral-500 dark:border-neutral-600 dark:bg-neutral-700 dark:focus:ring-neutral-600 dark:ring-offset-neutral-800"
        />
        <label
          for={`${generoProps.id}-masculino`}
          class="ms-2 text-sm font-medium text-neutral-900 dark:text-neutral-300"
        >Masculino</label>
      </div>
      <div>
        <input
          type="radio"
          id={`${generoProps.id}-femenino`}
          name="genero"
          value="femenino"
          class="h-4 w-4 border-neutral-300 text-neutral-600 focus:ring-2 focus:ring-neutral-500 dark:border-neutral-600 dark:bg-neutral-700 dark:focus:ring-neutral-600 dark:ring-offset-neutral-800"
        />
        <label
          for={`${generoProps.id}-femenino`}
          class="ms-2 text-sm font-medium text-neutral-900 dark:text-neutral-300"
        >Femenino</label>
      </div>
      <div>
        <input
          type="radio"
          id={`${generoProps.id}-otro`}
          name="genero"
          value="otro"
          class="h-4 w-4 border-neutral-300 text-neutral-600 focus:ring-2 focus:ring-neutral-500 dark:border-neutral-600 dark:bg-neutral-700 dark:focus:ring-neutral-600 dark:ring-offset-neutral-800"
        />
        <label
          for={`${generoProps.id}-otro`}
          class="ms-2 text-sm font-medium text-neutral-900 dark:text-neutral-300"
        >Otro</label>
      </div>
    </div>
    <p class="mt-2 hidden text-xs text-red-600" id={`${generoProps.id}-error`}>
      Por favor, selecciona tu género.
    </p>
  </div>
</div>